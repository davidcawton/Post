<div class="panel work">
  <h1 class="panel-title">Work</h1>

  <p>
    <label>
    {{input type='checkbox' checked=showLargeThumbnails}}
    Large Thumbnails
  </label>
  </p>

  <div class="panel-thumbnails">
    {{#each model as |photo|}}

      {{#link-to 'work.photo' photo class='thumbnail' }}
        <img src= {{photo.thumbUrl}} class= {{if showLargeThumbnails 'large-thumb' 'small-thumb'}}>
        {{photo.name}}
      {{/link-to}}

    {{/each}}
  </div>
  {{outlet}}

</div>
